{
  "name": "parent-activity-azure-backend",
  "version": "1.0.0",
  "description": "Parent Activity App Backend with Azure SQL Database, Twilio SMS, and SendGrid Email",
  "main": "postgres-backend.js",
  "scripts": {
    "start": "node postgres-backend.js", 
    "dev": "nodemon postgres-backend.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:integration": "jest tests/integration --detectOpenHandles --forceExit",
    "test:unit": "jest tests/unit --detectOpenHandles --forceExit",
    "test:connections": "jest tests/integration/connections --detectOpenHandles --forceExit",
    "test:regression": "npm run test:connections && npm run test:unit",
    "test:all": "node test-runner.js",
    "legacy-test": "node test-azure-connection.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": ["azure", "sql", "twilio", "sendgrid", "parent-activity-app"],
  "author": "Parent Activity App",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "mssql": "^11.0.1",
    "pg": "^8.11.3",
    "twilio": "^5.3.7",
    "@sendgrid/mail": "^8.1.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": [
      "postgres-backend.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}