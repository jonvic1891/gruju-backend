{
  "name": "parent-activity-backend",
  "version": "1.0.0",
  "description": "Parent Activity App Backend with PostgreSQL Database, Twilio SMS, and SendGrid Email",
  "main": "postgres-backend.js",
  "scripts": {
    "start": "node postgres-backend.js",
    "dev": "nodemon postgres-backend.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:integration": "jest tests/integration --detectOpenHandles --forceExit",
    "test:unit": "jest tests/unit --detectOpenHandles --forceExit",
    "test:connections": "jest tests/integration/connections --detectOpenHandles --forceExit",
    "test:regression": "npm run test:connections && npm run test:unit",
    "test:all": "node test-runner.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "postgresql",
    "twilio",
    "sendgrid",
    "parent-activity-app"
  ],
  "author": "Parent Activity App",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.3",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "twilio": "^5.3.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "postgres-backend.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
